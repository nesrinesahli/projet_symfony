<section class="slider">
    <div class="slick-carousel m-slides-0" data-slick='{"slidesToShow": 1, "arrows": true, "dots": false, "speed": 700,"fade": true,"cssEase": "linear"}'>
        {% for slide in slides %}
            <div class="slide-item align-v-h">
                <div class="bg-img"><img src="{{ asset(slide.image) }}" alt="slide img"></div>
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-7">
                            <div class="slide__content">
                                <h2 class="slide__title">{{ slide.title }}</h2>
                                <p class="slide__desc">{{ slide.description }}</p>
                                <ul class="features-list list-unstyled mb-0 d-flex flex-wrap">
                                    {% for feature in slide.features %}
                                        <li class="feature-item">
                                            <div class="feature__icon">
                                                <i class="{{ feature.icon }}"></i>
                                            </div>
                                            <h2 class="feature__title">{{ feature.title }}</h2>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
